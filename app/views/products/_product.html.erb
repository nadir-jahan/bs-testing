<div class="row">
 <% @products.each do |product| %>

    <div class="col-md-3 col-sm-6">
      <div class="product">
          <a href="#"><img src="<%=product.image_url%>" class="img-responsive"></a>
        </div>
      <div class="details">
        <div class="name"><%=product.name%></div>
          <div class="description"><%=product.asin%></div>
          <div class="shop-links">
              <div class="btn-group">
                <button type="button" class="btn btn-default cart">Add to Cart</button>
              </div>
          </div>
      </div>
    </div>
  <% end %>
</div>